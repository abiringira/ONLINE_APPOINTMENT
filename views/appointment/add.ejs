	<div class="content-wrapper-inner centerize padded-tb">

					<div class="card add-student-card transparent-white">
					<div class="card-header">
						<div class="card-title h5 text-brown">Request New Appointment</div>
						<div class="card-subtitle text-light">Fill in form</div>
					</div>
					<div class="divider"></div>
					<div class="card-body">
					<form class="form-horizontal"  action="/users/add" method="post">
						<!-- First Name -->
						<div class="form-group">
							<div class="col-3 col-sm-12">
							<label class="form-label" for="fname">First Name</label>
							</div>
							<div class="col-9 col-sm-12">
							<input class="form-input" name="fname" id="fname" value="<%= fname %>" placeholder="First Name">
							</div>
						</div>
						<!-- Last Name -->
						<div class="form-group">
							<div class="col-3 col-sm-12">
								<label class="form-label" for="lname">Last Name</label>
							</div>
							<div class="col-9 col-sm-12">
								<input class="form-input"  name="lname" id="lname" value="<%= lname %>" placeholder="Name">
							</div>
							</div>
						<!-- Age -->
						<div class="form-group">
							<div class="col-3 col-sm-12">
								<label for="age" class="form-label">Age</label>
							</div>
							<div class="col-9 col-sm-12">
								<input type="number" name="age" value="<%= age %>" class="form-input" placeholder="21">
							</div>
						</div>
						<!-- Mobile -->
						<div class="form-group">
							<div class="col-3 col-sm-12">
								<label for="mobile" class="form-label">Phone Number</label>
							</div>
							<div class="col-9 col-sm-12">
								<input type="tel" name="mobile" value="<%= mobile %>" class="form-input" placeholder="0788000000">
							</div>
						</div>
						<!-- Email -->
						<div class="form-group">
							<div class="col-3 col-sm-12">
								<label for="email" class="form-label">Email</label>
							</div>
							<div class="col-9 col-sm-12">
								<input type="email" name="email" value="<%= email %>" class="form-input" placeholder="hello@gmail.com">
							</div>
						</div>
						<!-- gender -->
						<div class="form-group">
								<div class="col-3 col-sm-12">
									<label for="gender" class="form-label">Gender</label>
								</div>
								<div class="col-9 col-sm-12">
									<select name="gender" class="form-select">
										<option value="male">Male</option>
										<option value="female">Female</option>
									</select>
								</div>
							</div>
						<!-- id -->
						<div class="form-group">
								<div class="col-3 col-sm-12">
									<label for="identity" class="form-label">ID/Passport</label>
								</div>
								<div class="col-9 col-sm-12">
									<input class="form-input" value="<%= identity %>" name="identity" placeholder="1199090099992020" />
								</div>
							</div>
						<!-- secondary -->
						<div class="form-group">
								<div class="col-3 col-sm-12">
									<label for="province" class="form-label">Province</label>
								</div>
								<div class="col-9 col-sm-12">
									<input class="form-input" value="<%= province %>" name="province" />
								</div>
							</div>
						<!-- transcript -->
						<!-- faculty -->
						<div class="form-group">
								<div class="col-3 col-sm-12">
									<label for="district" class="form-label">Center</label>
								</div>
								
								<div class="col-9 col-sm-12">
										<% if (datacenter) { %>
											<% datacenter.forEach(function(center){ %>
									<select id="name" name="district" class="form-select" >
											<!--<option value="--Select--" disabled>Choose a Center </option>
											<option selected="<%= center.name %>" value="<%= center.name %>"> <%= center.name %></option> -->
											<%
											var options = <%= center.name %>;
											for ( var i = 0; i < options.length; i++ )
											{
												var selected = ( center[0].name == i ) ? "selected" : "";
												%><option value="<%=options[ i ] %>" <%=selected %>><%=i %></option><%
											}
											%>
									
									
										</select>
									<% }) %>
				               <% } %>
								
								</div>
								
							</div>
					
						<!-- session -->
						<div class="form-group">
								<div class="col-3 col-sm-12">
									<label for="counselor" class="form-label">Counselor</label>
								</div>
								<div class="col-9 col-sm-12">
									<select name="counselor"  class="form-select">
										<option value="Dr. Bizoza">Dr. Bizoza</option>
										<option value="Dr. Agnes Kalibata">Dr. Agnes Kalibata</option>
										<option value="Dr. Marcel Ntazinda">Dr. Marcel Ntazinda</option>
									</select>
								</div>
							</div>
						<!-- Submit -->
						<div class="padded-tb">
							<button class="btn-block btn btn-primary bg-brown text-white" type="submit">Submit</button>
						</div>
						
						</form>
						</div>
						</div>
						</div>



				  </div>
		
	</div>

